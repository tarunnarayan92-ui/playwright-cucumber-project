{
  "name": "playwright-cucumber-project",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js && node generate-report.js",
    "test:smoke": "cucumber-js --tags \"@smoke\"",
    "test:regression": "cucumber-js --tags \"@regression\"",
    "test:footer": "cucumber-js --tags \"@footer\"",
    "test:table": "cucumber-js --tags \"@table\"",
    "test:alerts": "cucumber-js --tags \"@alerts\"",
    "test:login": "cucumber-js --tags \"@login\"",
    "test:inventory": "cucumber-js --tags \"@inventory\"",
    "test:checkout": "cucumber-js --tags \"@checkout\"",
    "test:exclude-regression": "cucumber-js --tags \"not @regression\"",
    "test:chrome": "cross-env BROWSER=chromium cucumber-js",
    "test:firefox": "cross-env BROWSER=firefox cucumber-js",
    "test:webkit": "cross-env BROWSER=webkit cucumber-js",
    "test:all": "npm-run-all --parallel test:chrome test:firefox test:webkit",
    "demo": "cross-env DEMO_MODE=true cucumber-js",
    "demo:alerts": "cross-env DEMO_MODE=true cucumber-js --tags \"@alerts\"",
    "demo:chrome": "cross-env DEMO_MODE=true BROWSER=chromium cucumber-js",
    "demo:all": "cross-env DEMO_MODE=true npm-run-all --parallel test:chrome test:firefox test:webkit",
    "report:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "report:open": "allure open reports/allure-report",
    "report:serve": "allure serve reports/allure-results",
    "report:cucumber": "node generate-report.js"
  },
  "keywords": [
    "pw",
    "ts",
    "js"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@playwright/test": "^1.58.0",
    "@types/node": "^20.10.0",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^3.4.5",
    "cross-env": "^10.1.0",
    "cucumber-html-reporter": "^6.0.0",
    "npm-run-all": "^1.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
